<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TableRow
                android:id="@+id/TableRow04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/studenticon" />
            </TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".90"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <TableRow
                        android:id="@+id/TableRow01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" >

                        <com.informaticsproject.ureport.MyTextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="Anonymous"
                            android:textStyle="bold" />
                    </TableRow>

                    <RelativeLayout
                        android:id="@+id/RelativeLayoutupvote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center_horizontal|center_vertical" >

                        <ImageView
                            android:id="@+id/ImageView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/upvoteicon" />

                        <com.informaticsproject.ureport.MyTextView
                            android:id="@+id/upvote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/ImageView03"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:text="Upvote"
                            android:textColor="#111"
                            android:textSize="9sp" />
                    </RelativeLayout>
                </TableRow>

                <com.informaticsproject.ureport.MyTextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="MyTextView"
                    android:textColor="#616365" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.informaticsproject.ureport.MyTextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="12 Mar 2014"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#878BCD" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/rowdoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/docicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/docicon" />
            </TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8" >

                        <com.informaticsproject.ureport.MyTextView
                            android:id="@+id/docname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Rain semester timetable.pdf"
                            android:textColor="#616365" />
                    </TableRow>

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.informaticsproject.ureport.MyTextView
                            android:id="@+id/savedoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/up"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:text="Save"
                            android:textColor="#4c50a8"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </TableRow>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/rowmedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/docicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mediaicon" />
            </TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8" >

                        <ImageView
                            android:id="@+id/media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/unilogo" />
                    </TableRow>

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.informaticsproject.ureport.MyTextView
                            android:id="@+id/savemedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/up"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:text="Save"
                            android:textColor="#4c50a8"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </TableRow>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

</LinearLayout>